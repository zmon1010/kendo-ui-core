<div class="demo-section k-content">
    <h4>Select product</h4>
    @(Html.Kendo().ComboBox()
          .Name("products")
          .DataTextField("ProductName")
          .DataValueField("ProductID")
          .Filter("contains")
          .DataSource(source =>
          {
              source.Read(read =>
              {
                  read.Action("GetProducts", "Home");
              })
              .ServerFiltering(false);
          })
          .HtmlAttributes(new { style = "width:100%;" })
    )
</div>