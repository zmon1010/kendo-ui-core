<div id="example" role="application" dir="rtl">
    <div class="demo-section k-content wide">
        @(Html.Kendo().ListBox()
            .Name("source")
            .Toolbar(toolbar =>
            {
                toolbar.Position(Kendo.Mvc.UI.Fluent.ListBoxToolbarPosition.Left);
                toolbar.Tools(tools => tools
                    .TransferFrom()
                    .TransferTo()
                    .TransferAllFrom()
                    .TransferAllTo()
                );
            })
            .HtmlAttributes(new { title = "Source"})
            .Messages(messages => messages.Tools(tools =>
            {
                tools.TransferFrom("To Right");
                tools.TransferTo("To Left");
                tools.TransferAllFrom("All to Right");
                tools.TransferAllTo("All to Left");
            }))
            .ConnectWith("destination")
            .BindTo(ViewBag.Countries)
        )

        @(Html.Kendo().ListBox()
            .Name("destination")
            .HtmlAttributes(new { title = "Destination"})
            .Toolbar(toolbar =>
            {
                toolbar.Position(Kendo.Mvc.UI.Fluent.ListBoxToolbarPosition.Left);
                toolbar.Tools(tools => tools
                    .MoveUp()
                    .MoveDown()
                    .Remove()
                );
            })
            .BindTo(new List<string>())
            .Selectable(ListBoxSelectable.Multiple)
        )
    </div>
</div>
<style>
    .k-listbox-toolbar {
        order: 2;
        margin-right: 5px!important;
    }

    #example .demo-section {
        max-width: none;
        width: 695px;
    }

    #example .k-listbox {
        width: 342px;
        height: 250px;
    }

    .k-i-arrow-60-right:before,
    .k-i-arrow-double-60-right:before {
        margin-left: -2px;
    }

    .k-i-arrow-60-right:before, .k-i-arrow-60-left:before,
    .k-i-arrow-double-60-right:before, .k-i-arrow-double-60-left:before {
        -moz-transform: scaleX(-1);
        -o-transform: scaleX(-1);
        -webkit-transform: scaleX(-1);
        transform: scaleX(-1);
        filter: FlipH;
        -ms-filter: "FlipH";
    }
</style>
