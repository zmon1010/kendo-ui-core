@{ Func<string,bool> UrlMatches = (query) => new System.Text.RegularExpressions.Regex(query).Match(Request.Url.PathAndQuery).Length > 0; }
@{ Func<string,bool,IHtmlString> ConditionalResource = (resource, condition) => {
    if (condition) {
        if (resource.EndsWith(".css")) {
            return MvcHtmlString.Create("\n    <link rel=\"stylesheet\" href=\"" + resource + "\" />");
        } else {
            return MvcHtmlString.Create("\n    <script src=\"" + resource + "\"></script>");
        }
    } else {
        return MvcHtmlString.Empty;
    }
}; }
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="styles/kendo.common.min.css" />
    <link rel="stylesheet" href="styles/kendo.default.min.css" />@(
    ConditionalResource("styles/kendo.rtl.min.css", UrlMatches("right-to-left")))
    @if ((ViewBag.Mobile && !ViewBag.DisableInMobile) || ViewBag.MobileAngular) {
    <link rel="stylesheet" href="styles/kendo.mobile.all.min.css" />
    } else {
    <link rel="stylesheet" href="styles/kendo.default.mobile.min.css" />
    }

    <script src="js/jquery.min.js"></script>@(
    ConditionalResource("js/jszip.min.js", UrlMatches("(export|spreadsheet)")))@(
    ConditionalResource("js/angular.min.js", UrlMatches("angular")))
    <script src="js/kendo.all.min.js"></script>@(
    ConditionalResource("js/kendo.timezones.min.js", UrlMatches("scheduler")))
    @if (ViewBag.MobileAngular) {
    <style>
        html, body {
            height: 100%;
        }
    </style>
    }
</head>
<body>
@{ WriteTo(new StringWriter(), RenderSection("Description", false)); }
@RenderBody()

    @if (ViewBag.Mobile && !ViewBag.DisableInMobile) {
<script>
    var app = new kendo.mobile.Application(document.body, { skin: "nova" });
</script>
    }
</body>
</html>
