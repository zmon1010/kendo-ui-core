<div id="example">
    <div class="demo-section k-content">
    <h4>Tasks</h4>
    <table>
      <tr>
        <th>Item</th>
        <th>Important</th>
      </tr>
      <tr>
        <td>
          <span data-bind="text: text, css: { important: important }"></span>
        </td>
        <td>
          <input type="checkbox" data-bind="checked: important"/>
        </td>
      </tr>
    </table>
    </div>
    <script>
        $(document).ready(function () {
            var viewModel = kendo.observable({
                text: "Meet with Jenny",
                important: true
            });
            kendo.bind($("#example"), viewModel);
        });
    </script>

    <style>
        .important {
            color: #FF0000;
        }
    </style>
</div>